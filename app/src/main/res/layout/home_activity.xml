<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.HomeActivity"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="373dp"
        android:layout_marginTop="40dp"

        android:orientation="vertical">
        <TextView
            android:id="@+id/signintitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:text="SÃ©lectionnez"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />

            <EditText
                android:id="@+id/txtNomorigine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="10dp"
                android:layout_marginTop="40dp"
                android:background="#30ffffff"
                android:drawableLeft="@drawable/ic_baseline_email_2"
                android:drawablePadding="20dp"
                android:hint="Depart"
                android:padding="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />
            <EditText
                android:id="@+id/txtNomdistination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:autofillHints=""
                android:background="#30ffffff"
                android:drawableLeft="@drawable/ic_baseline_email_3"
                android:drawablePadding="20dp"
                android:hint="Distination"

                android:padding="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />


    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:id="@+id/btnJouer"
        android:text="Submit"
        android:textSize="30dp"
        android:layout_below="@+id/btnsubmit"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"

        android:backgroundTint="@color/design_default_color_secondary"
        android:layout_margin="15dp" />
</LinearLayout>